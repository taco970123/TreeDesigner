#property-bar {
    border-left-width: 1px;
    border-right-width: 1px;
    border-top-width: 1px;
    border-bottom-width: 1px;
    border-left-color: rgb(34, 34, 34);
    border-right-color: rgb(34, 34, 34);
    border-top-color: rgb(34, 34, 34);
    border-bottom-color: rgb(34, 34, 34);
    height: auto;
}

.dragged #property-bar {
    border-left-color: rgba(68, 192, 255, 255);
    border-right-color: rgba(68, 192, 255, 255);
    border-top-color: rgba(68, 192, 255, 255);
    border-bottom-color: rgba(68, 192, 255, 255);
}

#property-type-label {
    width: 62px;
    padding-left: 0;
    padding-right: 0;
    padding-top: 0;
    padding-bottom: 0;
    -unity-font-style: bold;
    border-right-width: 2px;
    border-left-color: rgba(34, 34, 34, 255);
    border-right-color: rgba(34, 34, 34, 255);
    border-top-color: rgba(34, 34, 34, 255);
    border-bottom-color: rgba(34, 34, 34, 255);
    color: rgba(34, 34, 34, 255);
    -unity-text-align: middle-center;
    font-size: 14px;
}

